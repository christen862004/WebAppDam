@model EmpWithDeptListViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<!--/Employee/SaveEdit?Name=&Salary=&id-->
<form action="/Employee/SaveEdit/@Model.Id" method="post">
    @* <input type="hidden" name="Id" value="@Model.Id" /> *@
    <div>
        <label>Name</label>
        <input class="form form-control" type="text" id="Name" name="Name" value="@Model.Name" />
    </div>
    <div>
        <label>Salary</label>
        <input class="form form-control" type="number" id="Salary" name="Salary" value="@Model.Salary" />
    </div>
    <div>
        <label>ImageUrl</label>
        <input class="form form-control" type="text" id="ImageUrl" name="ImageUrl" value="@Model.ImageUrl" />
    </div>
    <div>
        <label>Email</label>
        <input class="form form-control" type="Email" id="Email" name="Email" value="@Model.Email" />
    </div>
    <div>
        <label>Department</label>
        @* <input class="form form-control" type="number" id="DepartmentId" name="DepartmentId" value="@Model.DepartmentId" /> *@
        <select class="form form-control" id="DepartmentId" name="DepartmentId">
            @foreach (Department deptItem in Model.DeptList)
            {
                if(Model.DepartmentId==deptItem.Id){
                    <option value="@deptItem.Id" selected>@deptItem.Name</option>
                }
                else
                {
                    <option value="@deptItem.Id">@deptItem.Name</option>
                }

            }
        </select>
    </div>
    <input type="submit" value="Save" class="btn btn-dark"/>
</form>
<a href="/Employee/Index">Back To List</a>